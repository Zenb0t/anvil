digraph review_flow {
  graph [goal="Demonstrate wait.human routing"]
  rankdir=LR

  start   [shape=Mdiamond]
  gate    [shape=hexagon, prompt="Choose next step"]
  approve [shape=box, prompt="Approved path"]
  revise  [shape=box, prompt="Revision path"]
  done    [shape=Msquare]

  start -> gate
  gate -> approve [label="Approve"]
  gate -> revise  [label="Fix"]
  approve -> done
  revise  -> done
}
